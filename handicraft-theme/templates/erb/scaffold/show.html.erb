<div class="hd">
    <h1>
        <%%= t(".title") %>
    </h1>
</div>

<div class="section">
    <div class="bd">
        <% for attribute in attributes -%>
            <p>
            <b><%%= <%= class_name %>.human_attribute_name(:<%= attribute.name %>) %>:</b>
            <%%= @<%= singular_name %>.<%= attribute.name %> %>
            </p>

        <% end -%>

        <%%= link_to t('links.edit'), edit_<%= singular_name %>_path(@<%= singular_name %>) %> |
        <%%= link_to t('links.index'), <%= plural_name %>_path %>
    </div>
</div>

